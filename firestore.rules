rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // RSVP Collection Rules
    match /rsvps/{document=**} {
      // Allow only authenticated users to read RSVPs (admin dashboard)
      allow read: if request.auth != null;
      
      // Allow anyone to create RSVPs (for the RSVP form)
      allow create: if true;
      
      // Prevent updates and deletes for security
      // (you can add authentication if needed later)
      allow update, delete: if false;
    }

    // User Profiles Rules
    match /users/{userId} {
      // Allow users to read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
